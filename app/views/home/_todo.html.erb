<% todo_delete_id = "todo-delete-#{todo.id}" %>
<div class="todo-container todo" id="todo_<%= todo.id %>">
  <% form_id = "todo_form_#{todo.id}" %>
  <%= form_for todo, :html => { :id => form_id } do |f| %>
    <%= f.check_box :completed, :onclick => "$('##{form_id}').submit()", :id => "todo_completed_#{todo.id}" %>
    <span class="todo-due-date"><%= todo.due_date.strftime("%m/%d/%y") %></span>
    <span class="todo-name"> <%= todo.name %> </span>
  <% end %>
  <%= link_to '', todo_path(todo),
    method: :delete,
    class: 'fa fa-trash',
    id: todo_delete_id,
    data: { confirm: 'Are you sure you want to delete this todo?'} %>
</div>
